
public class CarQSemaphore {
	private int q;
	private int maxcarqueue;
	private int initq;
	
	
	public CarQSemaphore(int initqu, int maxcars)
	{
		q = initqu;
		initq = initqu;
		maxcarqueue=maxcars;
		
	}
	public synchronized int getq()
	{
		return q;
	}
	
	public synchronized boolean arrival()
	{
		if(q < maxcarqueue)
		{
			q++;
			return true;
		}
		else
		{
			return false;
		}
	}
	
	public synchronized boolean departure()
	{
		if(q > initq)
		{
			q--;
			return true;
		}
		else
		{
			return false;
		}
	}

}
